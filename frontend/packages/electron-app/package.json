{
  "name": "astron-rpa",
  "version": "1.1.2",
  "homepage": "https://www.iflyrpa.com",
  "main": "./out/main/index.js",
  "scripts": {
    "typecheck:node": "tsc --noEmit -p tsconfig.node.json --composite false",
    "typecheck:web": "tsc --noEmit -p tsconfig.web.json --composite false",
    "typecheck": "npm run typecheck:node && npm run typecheck:web",
    "start": "electron-vite preview",
    "dev:web": "pnpm --filter @rpa/web-app run dev",
    "dev:client": "electron-vite dev --watch",
    "dev": "npm run build:sdk && run-p dev:web dev:client",
    "build": "npm run build:sdk && npm run typecheck && electron-vite build && npm run build:web",
    "build:legacy": "pnpm --filter @rpa/web-app run build:legacy",
    "postinstall": "electron-builder install-app-deps",
    "build:unpack": "npm run build && electron-builder --dir",
    "build:win": "npm run build && electron-builder --win",
    "build:win32": "npm run build && electron-builder --win --ia32",
    "build:mac": "npm run build && electron-builder --mac",
    "build:linux": "npm run build && electron-builder --linux",
    "build:subwin": "npm run build:win32 --mode=subwin",
    "build:sdk": "tsdown --config tsdown.config.mts",
    "build:web": "pnpm --filter @rpa/web-app run build && npm run copy:renderer",
    "copy:renderer": "node scripts/copy-dist.js"
  },
  "dependencies": {
    "await-to-js": "^3.0.0",
    "axios": "^1.7.4",
    "builder-util-runtime": "^9.5.1",
    "electron-updater": "^6.7.3",
    "lodash-es": "^4.17.21",
    "tree-kill": "^1.2.2",
    "yaml": "^2.8.2"
  },
  "devDependencies": {
    "@electron-toolkit/tsconfig": "^1.0.1",
    "@rpa/shared": "workspace:*",
    "@types/lodash-es": "^4.17.12",
    "@types/node": "^16.18.126",
    "electron": "22.3.27",
    "electron-builder": "^24.13.3",
    "electron-vite": "^2.3.0",
    "tsdown": "catalog:",
    "typescript": "^5.5.2",
    "vite": "^5.3.1"
  }
}
